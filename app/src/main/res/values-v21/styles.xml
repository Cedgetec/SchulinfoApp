<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">#2196F3</item>
        <item name="android:colorPrimaryDark">#1976D2</item>
        <item name="android:textColor">#444444</item>
        <item name="android:colorAccent">#FF9800</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">#FF9800</item>
        <item name="android:colorPrimaryDark">#F57C00</item>
        <item name="android:textColor">#444444</item>
        <item name="android:colorAccent">#2196F3</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
