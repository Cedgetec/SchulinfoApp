<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#2196F3</item>
        <item name="android:textColor">#444444</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog.Blue</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#F57C00</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog.Orange</item>
        <item name="android:textColor">#444444</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Theme.AlertDialog.Blue" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#2196F3</item>
        <item name="android:background">#ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="Theme.AlertDialog.Orange" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF9800</item>
        <item name="android:background">#ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
