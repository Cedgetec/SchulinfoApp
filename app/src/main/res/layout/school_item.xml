<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <TextView
            android:id="@+id/school_firstletter_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/colored_circle"
            android:text="G"
            android:textColor="@color/schoolListIconText"
            android:textSize="26.5sp"
            android:includeFontPadding="false"
            android:gravity="center" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:id="@+id/school_name"/>

        <TextView
            android:id="@+id/school_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="?attr/colorAccent" />

    </LinearLayout>

    <TextView
        android:id="@+id/school_user_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="16dp"
        android:text="0 User"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="?android:attr/textColorSecondary" />

</LinearLayout>