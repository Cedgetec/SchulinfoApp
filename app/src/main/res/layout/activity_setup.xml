<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">


    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:background="@color/setupColor"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:theme="@style/ToolBarStyle"
        android:theme="@style/ToolBarStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/supported_schools"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/setup_title" />

        <ListView
            android:id="@+id/setup_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/setup_title"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/ShaderTabLayout"
            android:background="@drawable/tablayoutbackground"/>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

</LinearLayout>